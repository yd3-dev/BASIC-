#include<iostream>
using namespace std;
int main() {
    int n(0);
    cout << "Enter a number : ";
    cin >> n;
    if(n) {
        if(n > 0) cout << "Number is Positive";
        else if(n < 0) cout << "Number is Negative";
        cout << " and ";

        if(n%2) cout << "Odd";
        else cout << "Even";
        cout << endl;
    }
    else {
        cout << "Number is Even and is neither positive nor negative" << endl;
    }
    return 0;
}
